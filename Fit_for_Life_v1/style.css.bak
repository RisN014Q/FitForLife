/* Main Content */
.container { 
  text-align: center;
  padding: 20px;
}

.trainers-row {
  display: flex;
  gap: 20px;
  align-items: stretch;
  margin-top:16px;
}

.t-card {
  flex: 1 1 0;
  background: white;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Trainer's picture box */
.trainer-pic { 
  width: 200px;
  height: 200px;
  background: #ddd;
  margin: 20px auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.t-card .mission {
  flex: 1 0 auto;
  margin-bottom: 12px;
}

/* Mission Statement box */
.mission { 
  background: white;
  padding: 15px;
  margin: 20px auto;
  max-width: 300px;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Reviews Page Layout */
.picture-grid { 
  display: flex;
  justify-content: center;
  gap: 10px;
  margin: 20px 0;
}

.picture-box { 
  width: 45%;
  height: 150px;
  background: #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  border-radius: 6px;
}

.testimonials { 
  background: white;
  padding: 15px;
  margin: 20px auto;
  max-width: 300px;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Button Styling */
.btn {
  display: inline-block;
  background: #1e90ff;
  color: white;
  padding: 10px 15px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
}

/* Forms (Contact Page) */
form { 
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 300px;
  margin: auto;
}

input, textarea { 
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button { 
  background: #1e90ff;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover { 
  background: #007acc;
}

/* Footer */
footer { 
  text-align: center;
  padding: 10px;
  font-size: 0.8rem;
  color: #666;
}

.calendar-wrap { max-width:720px; margin:18px auto; background:#fff; padding:14px; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.06); }
.cal-header { display:flex; justify-content:space-between; align-items:center; margin-bottom:8px; }
.cal-header button { background:#0078d4; color:#fff; border:none; padding:6px 10px; border-radius:4px; cursor:pointer; }
.month-label { font-weight:600; }

.cal-grid { border-top:1px solid #eee; padding-top:8px; }
.cal-weekdays { display:grid; grid-template-columns:repeat(7,1fr); color:#666; font-size:0.9rem; margin-bottom:6px; }
.cal-days { display:grid; grid-template-columns:repeat(7,1fr); gap:6px; }

.day { min-height:44px; border-radius:6px; border:1px solid transparent; background:transparent; cursor:pointer; padding:6px; text-align:center; }
.day.empty { background:transparent; border:none; pointer-events:none; }
.day.available { background:#f6fbff; border:1px solid #d6eaf8; color:#004b7a; }
.day.unavailable { background:#f3f3f3; color:#999; cursor:not-allowed; }
.day.selected { background:#0078d4; color:#fff; border-color:#005aab; }

.cal-actions { display:flex; justify-content:space-between; align-items:center; margin-top:12px; gap:12px; flex-wrap:wrap; }
.selected-list ul { margin:6px 0 0 0; padding-left:18px; max-height:80px; overflow:auto; }
.buttons button { margin-left:6px; padding:8px 12px; border-radius:6px; border:1px solid #ccc; background:#fff; cursor:pointer; }
.buttons button#submitSelection { background:#0078d4; color:#fff; border-color:#0061a8; }
.buttons button#clearSelection { background:#0078d4; color:#fff; border-color:#0061a8; }

.hint { margin-top:10px; color:#666; font-size:0.9rem; }

@media (max-width:540px) {
  .cal-header { gap:8px; }
  .cal-days .day { min-height:52px; }
}


/* Testing tablet methods */
@media (min-width: 601px) and (max-width: 1023px) {

body {
  background: lightblue;
  font-size: 18px;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  padding: 20px;
}

.trainer-pic, .mission {
  flex: 1;
  width: 45%;
  margin: 10px;
}

.trainer-pic img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 0 auto;
  border-radius: 8px;
}

.mission {
  text-align: left;
}

.side-menu {
  width: 250px;
}

.picture-grid {
  display: flex;
  justify-content: center;
  gap: 20px;
  width: 100%;
  max-width: 800px;
}

.picture-box {
  flex: 1;
  height: 200px;
  max-width: 45%;
  margin: 0 auto;
}

.testimonials {
  max-width: 600px;
}

}


/*Desktop layout*/
@media (min-width: 1024px) {

  body {
    font-size: 20px;
    background: lightyellow;
  }

  /*Keep side menu visible*/
  .side-menu {
    width: 200px !important;
    position: fixed;
    top: 0px;
    left: 0px;
    height: 100%;
    display: block;
    border-right: 1px solid #ddd;
    padding-top: 0px;
    background: #fff;
  }

  .side-menu a:first-child {
    display: none; /*Hides close option*/
  }

  /*Hide hamburger on desktop*/
  .menu-icon {
    display:none;
  }

  /*Keep header centered*/
  header {
    justify-content: center;
  }

  .search-icon {
    position: absolute;
    right: 20px;
  }

  /*Make trainer pic/mission statement side by side*/
  .trainer-pic {
    margin: 20px;
    display: inline-flex;
  }

  .mission {
    display: inline-block;
    vertical-align: top;
    max-width: 400px;
  }
}

/* Services list: image left, description right; stacked vertically */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 18px;
  margin-top: 12px;
}

.service-item {
  display: flex;
  gap: 16px;
  align-items: center;
  padding: 14px;
  background: rgba(255,255,255,0.9);
  border-radius: 8px;
  border: 1px solid rgba(0,0,0,0.04);
  box-shadow: 0 2px 6px rgba(0,0,0,0.03);
}

/* Image on the left */
.service-img {
  width: 160px;
  height: 120px;
  object-fit: cover;
  border-radius: 6px;
  flex: 0 0 160px;
}

/* Description to the right */
.service-desc {
  text-align: left;
  flex: 1 1 auto;
}

.service-desc h3 {
  margin: 0 0 6px;
  font-size: 1.05rem;
}

.service-desc p {
  margin: 0;
  color: #444;
  line-height: 1.4;
  font-size: 0.95rem;
}

/* Responsive: stack image above text on narrow screens */
@media (max-width: 700px) {
  .service-item {
    flex-direction: column;
    align-items: flex-start;
  }

  .service-img {
    width: 100%;
    height: 180px;
    flex: 0 0 auto;
    margin-bottom: 10px;
  }

  .service-desc {
    width: 100%;
  }
}

/* Owner card: vertical layout (photo above name/bio) */
.owner-card {
  display: flex;
  flex-direction: column; /* vertical stack by default */
  gap: 12px;
  align-items: center;
  text-align: center;
  background: rgba(255,255,255,0.95);
  padding: 16px;
  border-radius: 8px;
  border: 1px solid rgba(0,0,0,0.04);
  margin-bottom: 18px;
}

.owner-img {
  width: 140px;
  height: 140px;
  object-fit: cover;
  border-radius: 50%;
  flex: 0 0 auto;
  box-shadow: 0 2px 6px rgba(0,0,0,0.06);
}

.owner-info h3 {
  margin: 0 0 6px 0;
  font-size: 1.1rem;
}

.owner-info p {
  margin: 0;
  color: #444;
  line-height: 1.4;
  max-width: 720px;
}

/* Keep vertical layout on narrow screens as well */
@media (max-width: 700px) {
  .owner-card {
    padding: 14px;
  }
  .owner-img {
    width: 160px;
    height: 160px;
    margin-bottom: 8px;
  }
}

/* Payment page styles */
.payment-summary {
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
  margin: 12px 0 18px;
  font-size: 0.95rem;
}

.payment-card {
  max-width: 720px;
  margin: 0 auto 18px;
  background: linear-gradient(180deg, #ffffff, #fbfdff);
  padding: 18px;
  border-radius: 10px;
  box-shadow: 0 6px 18px rgba(18,38,63,0.06);
}

.payment-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.payment-form label { font-size: 0.85rem; color: #333; }
.payment-form input { padding: 10px; border-radius: 6px; border: 1px solid #ccc; box-sizing: border-box; }

.row { display:flex; gap:10px; }
.col { flex:1; }
.col.small { flex:0 0 110px; }

.form-actions { display:flex; justify-content: flex-end; gap:10px; margin-top:8px; }

.btn.primary { background:#0078d4; color:#fff; border: none; padding:10px 14px; border-radius:6px; }
.btn.ghost { background:transparent; border:1px solid #ccc; color:#333; padding:8px 12px; border-radius:6px; }

.note { text-align:center; color:#666; font-size:0.9rem; margin-top:8px; }

@media (max-width:700px) {
  .row { flex-direction: column; }
  .form-actions { justify-content: center; }
}

/* Make CVV input narrower on tablet/desktop so it doesn't look too large */
@media (min-width: 701px) {
  .col.small { flex: 0 0 86px; }
  .col.small input { text-align: center; width: 100%; box-sizing: border-box; padding: 8px; }
}

/* Fallback: ensure small column inputs never overflow their container */
.col.small input { max-width: 100%; }